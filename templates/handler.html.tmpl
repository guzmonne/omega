<!-- HTML Body -->
<body style="background-color: rgba(0, 0, 0, 0)">
  <svg width="100vw" height="100vh" viewBox="0 0 {{ .width }} {{ .height }}">
    <rect x="100" y="540" width="100" height="100" stroke="none" fill="#FF4B4B" />
  </svg>

  <!-- Libraries -->
{{if eq .method "timeweb"}}  <script src="/assets/timeweb.js"></script>{{ end }}
  <script src="/assets/anime.min.js"></script>
  <!-- Communication Script -->
  {{ template "communication.html.tmpl" . }}
  <!-- Custom Script -->
  <script>
var animation = anime({
  targets: 'svg > rect',
  translateX: 1600,
  duration: 1000,
  complete: () => {
    Omega.stop()
    Omega.done()
  }
});

Omega.ready(() => {
  Omega.start()
  animation.play()
})
  </script>
</body>

